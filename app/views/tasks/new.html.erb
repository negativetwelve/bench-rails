<% provide(:title, "New Task") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>New Task</h1>
    <%= form_for(:task, url: project_tasks_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create Task", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
